{
  "manifest_version": 3,
  "name": "Aulario cookie fix",
  "version": "1.1",
  "description": "extends the expiration date of cookies automatically.",
  "permissions": [
    "cookies",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.unavarra.es/*"
  ],
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cookies@aulariofix.local",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}